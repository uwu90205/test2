<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_panel"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#455A64"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Завершити покупку"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/icon_close"
            app:layout_constraintStart_toEndOf="@id/icon_close"
            app:layout_constraintTop_toTopOf="@id/icon_close" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dev_fee_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_panel">

        <TextView
            android:id="@+id/text_fee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer Registration Fee"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_fee_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25,00 USD"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_fee_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/icon_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_credit_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dev_fee_section" />

    <TextView
        android:id="@+id/title_add_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:text="Додати кредитну чи дебетову картку"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@id/icon_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_card"
        app:layout_constraintTop_toTopOf="@id/icon_card" />

    <ImageView
        android:id="@+id/icon_hash_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_hash_tag"
        app:layout_constraintBottom_toBottomOf="@id/edit_card_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_card_number" />

    <EditText
        android:id="@+id/edit_card_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:hint="Номер картки"
        android:inputType="number"
        android:maxLength="16"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/edit_card_month"
        app:layout_constraintStart_toEndOf="@id/icon_hash_tag"
        app:layout_constraintTop_toBottomOf="@id/title_add_card" />
    <TextView
        android:id="@+id/error_card_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/edit_card_number"
        app:layout_constraintStart_toStartOf="@id/edit_card_number"
        app:layout_constraintEnd_toEndOf="@id/edit_card_number"
        tools:text="Помилка номера картки"
        tools:visibility="visible"/>


    <EditText
        android:id="@+id/edit_card_month"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:hint="MM"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:inputType="number"
        android:maxLength="2"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/text_slash"
        app:layout_constraintTop_toTopOf="@id/edit_card_number"
        app:layout_constraintBottom_toBottomOf="@id/edit_card_number" />
    <TextView
        android:id="@+id/error_card_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/edit_card_month"
        app:layout_constraintStart_toStartOf="@id/edit_card_month"
        app:layout_constraintEnd_toEndOf="@id/edit_card_month"
        tools:text="!"
        tools:visibility="visible"/>


    <TextView
        android:id="@+id/text_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="20sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/edit_card_year"
        app:layout_constraintTop_toTopOf="@id/edit_card_number"
        app:layout_constraintBottom_toBottomOf="@id/edit_card_number" />

    <EditText
        android:id="@+id/edit_card_year"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:hint="РР"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:inputType="number"
        android:maxLength="2"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/edit_card_cvc"
        app:layout_constraintTop_toTopOf="@id/edit_card_number"
        app:layout_constraintBottom_toBottomOf="@id/edit_card_number" />
    <TextView
        android:id="@+id/error_card_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/edit_card_year"
        app:layout_constraintStart_toStartOf="@id/edit_card_year"
        app:layout_constraintEnd_toEndOf="@id/edit_card_year"
        tools:text="!"
        tools:visibility="visible"/>


    <EditText
        android:id="@+id/edit_card_cvc"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:hint="CVC"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:inputType="numberPassword"
        android:maxLength="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_card_number"
        app:layout_constraintBottom_toBottomOf="@id/edit_card_number" />
    <TextView
        android:id="@+id/error_card_cvc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/edit_card_cvc"
        app:layout_constraintStart_toStartOf="@id/edit_card_cvc"
        app:layout_constraintEnd_toEndOf="@id/edit_card_cvc"
        tools:text="!"
        tools:visibility="visible"/>


    <EditText
        android:id="@+id/edit_card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Ім'я власника картки"
        android:inputType="textPersonName|textCapWords"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/edit_card_cvc"
        app:layout_constraintStart_toStartOf="@id/edit_card_number"
        app:layout_constraintTop_toBottomOf="@id/error_card_number" />
    <TextView
        android:id="@+id/error_card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/edit_card_name"
        app:layout_constraintStart_toStartOf="@id/edit_card_name"
        app:layout_constraintEnd_toEndOf="@id/edit_card_name"
        tools:text="Помилка імені"
        tools:visibility="visible"/>


    <ImageView
        android:id="@+id/icon_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_card_name" />

    <Spinner
        android:id="@+id/spinner_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@id/edit_card_cvc"
        app:layout_constraintStart_toEndOf="@id/icon_location"
        app:layout_constraintTop_toTopOf="@id/icon_location"
        app:layout_constraintBottom_toBottomOf="@id/icon_location" />

    <TextView
        android:id="@+id/error_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/spinner_country"
        app:layout_constraintStart_toStartOf="@id/spinner_country"
        app:layout_constraintEnd_toEndOf="@id/spinner_country"
        tools:text="Виберіть країну"
        tools:visibility="visible"/>


    <TextView
        android:id="@+id/text_legal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/legal_text_plain"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/error_country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КУПИТИ"
        android:backgroundTint="#4285F4"
        app:cornerRadius="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_legal"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>